<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_main_drawer_listView_fragment_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_picture_dark"
        android:contentDescription="@string/drawer_fragment_icon"/>

    <TextView
        android:id="@+id/activity_main_drawer_listView_fragment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_toRightOf="@id/activity_main_drawer_listView_fragment_icon"
        android:layout_toEndOf="@id/activity_main_drawer_listView_fragment_icon"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"/>
</RelativeLayout>